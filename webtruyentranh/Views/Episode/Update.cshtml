@model WebTruyenTranhDataAccess.Models.Episode

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layoutpage.cshtml";
}

<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">UPDATE EPISODE</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <div class="col-lg-12">
                    <form asp-action="Update">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.Id)
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Content" class="control-label"></label>
                            <textarea required id="editor1" asp-for="Content" class="form-control"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary ">Save Change</button>
                            <button class="btn btn-dark" value="Cancel" asp-action="Sumary" asp-controller="Dashboard"
                                    style="height: 43px;width: 80px;">
                                Cancel
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        CKEDITOR.replace('editor1');
    </script>
}

