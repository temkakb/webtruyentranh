                    @if (signinManager.IsSignedIn(User))
                    {
                        <div class="notifications">
                            <div class="icon_wrap">
                                <i class="icon-bell-o"></i>
                                <span class="badge-danger badge-counter">@nofications.Count()</span>
                            </div>
                            <div class="notification_dd">
                                <ul class="notification_ul">
                                    <!---------------------->
                                    @if (nofications.Any())
                                    {
